<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relay_temper"
    android:layout_width="match_parent"
    android:visibility="invisible"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="60dip"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:gravity="center"
        android:text="设置避温参数"
        android:textColor="@color/user_icon_default_white"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_magin_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/view_y"
            android:layout_above="@+id/view_x"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="设置上限温度值:"
            android:textColor="@color/user_icon_default_white"
            android:textSize="@dimen/txt_size_18"/>

        <EditText
            android:id="@+id/exit_height_value"
            android:inputType="numberDecimal"
            android:ems="4"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:layout_toRightOf="@+id/view_y"
            android:textColor="@color/Blue_700"
            android:text="800"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="150dip"
            android:layout_height="45dip"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/view_x" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_magin_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/view_y"
            android:layout_below="@+id/view_x"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="设置下限温度值:"
            android:textColor="@color/user_icon_default_white"
            android:textSize="@dimen/txt_size_18"/>

        <EditText
            android:id="@+id/exit_low_value"
            android:inputType="numberDecimal|numberSigned"
            android:ems="4"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:layout_toRightOf="@+id/view_y"
            android:textColor="@color/Blue_700"
            android:text="-10"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="150dip"
            android:layout_height="45dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view_x" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_magin_20"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="20dip"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_temper_clean"
            android:layout_marginLeft="20dip"
            android:background="@drawable/round_btn_normal"
            android:text="取消"
            android:layout_gravity="center"
            android:textColor="@color/user_icon_default_white"
            android:layout_width="100dip"
            android:layout_height="45dip" />

        <Button
            android:id="@+id/btn_temper_ok"
            android:layout_marginLeft="20dip"
            android:background="@drawable/round_btn_normal"
            android:text="确定"
            android:layout_gravity="center"
            android:textColor="@color/user_icon_default_white"
            android:layout_width="100dip"
            android:layout_height="50dip"/>
    </LinearLayout>
</LinearLayout>