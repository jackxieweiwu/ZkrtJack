<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="350dip"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@color/back_150"
        android:layout_height="180dip">

        <TextView
            android:id="@+id/txt_hint_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/activity_magin_5"
            android:textColor="@color/user_icon_default_white"
            android:textSize="@dimen/txt_size_16"
            android:gravity="center"/>

        <View
            android:id="@+id/line_hint"
            android:layout_below="@id/txt_hint_title"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#3dd1a5"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/cancel_hint"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/user_icon_default_white"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:layout_marginRight="15dp"
            android:text="取消"/>

        <TextView
            android:id="@+id/ok_hint"
            android:layout_alignParentBottom="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="3dp"
            android:singleLine="true"
            android:textColor="#3dd1a5"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/cancel_hint"
            android:layout_marginRight="15dp"
            android:text="确定"/>

        <View
            android:id="@+id/line2_hint"
            android:layout_width="match_parent"
            android:layout_above="@+id/ok_hint"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#3dd1a5"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_below="@id/line_hint"
            android:layout_above="@id/line2_hint"
            android:id="@+id/txt_string_values"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="确定要删除该航点吗？"
            android:textColor="@color/user_icon_default_white"
            android:textSize="@dimen/txt_size_16"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>