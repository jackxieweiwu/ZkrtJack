<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mount_search"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="invisible"
    android:layout_margin="@dimen/activity_magin_10"
    android:layout_marginTop="@dimen/activity_magin_10"
    android:layout_marginBottom="@dimen/activity_magin_10"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_tanzhao"
            android:layout_width="wrap_content"
            android:textColor="@color/user_icon_default_white"
            android:textSize="@dimen/txt_size_20"
            android:layout_marginRight="@dimen/txt_size_20"
            android:layout_height="wrap_content"
            android:text="探照灯:"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/btn_floater_zhao_ios2"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_zhao_clean"
        android:background="@drawable/round_btn"
        android:textColor="@color/user_icon_default_white"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:layout_below="@id/btn_floater_zhao_ios2"
        android:layout_marginTop="@dimen/txt_size_20"
        android:text="取消"
        android:textSize="@dimen/txt_size_18"/>
</LinearLayout>