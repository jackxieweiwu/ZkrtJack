<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_magin_5"
    android:background="@drawable/bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="无人机相册"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:padding="@dimen/activity_magin_5"
            android:textColor="@color/user_icon_default_white"
            android:textSize="25sp"
            android:layout_height="wrap_content" />

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/camera_clean_btn"
            android:background="@mipmap/usercenter_clear_highlight"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/activity_magin_5"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/user_icon_default_white"/>

    <GridView
        android:id="@+id/grid_camera_file"
        android:layout_marginTop="@dimen/activity_magin_10"
        android:numColumns="5"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/activity_magin_15"
        android:layout_height="match_parent"/>
</LinearLayout>