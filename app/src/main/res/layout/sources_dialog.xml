<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_excel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center|top"
        android:visibility="gone"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center|top"
            android:layout_height="50dip">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/user_icon_default_white"
                android:textSize="18sp"
                android:text="GPS_LAT"
                android:layout_height="50dip" />
            <TextView
                android:gravity="center"
                android:textColor="@color/user_icon_default_white"
                android:textSize="18sp"
                android:text="GPS_LNG"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="50dip" />

            <TextView
                android:gravity="center"
                android:textColor="@color/user_icon_default_white"
                android:textSize="18sp"
                android:text="GPS_CO"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="50dip" />

            <TextView
                android:gravity="center"
                android:textColor="@color/user_icon_default_white"
                android:textSize="18sp"
                android:text="GPS_H2S"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="50dip" />

            <TextView
                android:gravity="center"
                android:textColor="@color/user_icon_default_white"
                android:textSize="18sp"
                android:text="GPS_NH3"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="50dip" />

            <TextView
                android:gravity="center"
                android:textColor="@color/user_icon_default_white"
                android:textSize="18sp"
                android:text="GPS_CO2"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="50dip" />

            <TextView
                android:gravity="center"
                android:textColor="@color/user_icon_default_white"
                android:textSize="18sp"
                android:text="TIME"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="50dip" />

        </LinearLayout>

        <ListView
            android:id="@+id/sources_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_sources_excel"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="720dip" />
   <!-- <ListView
        android:id="@+id/list_sources_dialog"
        android:layout_weight="0.8"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>-->
</LinearLayout>