<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.zkrt.zkrtdrone.view.widget.AttitudeIndicator
        android:id="@+id/img_hud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="19%h"
        app:layout_widthPercent="10%w"
        android:background="@drawable/oval"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:id="@+id/linear_hud"
        android:layout_toLeftOf="@id/img_hud"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_magin_5"
        android:padding="@dimen/activity_magin_8"
        android:background="@drawable/oval"
        android:layout_width="wrap_content"
        android:layout_height="45dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:textSize="@dimen/txt_size_20"
            android:text="H:"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:id="@+id/txt_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_20"
            android:text="120.0M"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:textSize="@dimen/txt_size_20"
            android:text="D:"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:id="@+id/txt_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120.0M"
            android:textSize="@dimen/txt_size_20"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:text="V.S:"
            android:textSize="@dimen/txt_size_20"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:id="@+id/txt_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_20"
            android:text="10.0M/S"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:textSize="@dimen/txt_size_20"
            android:text="H.S:"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:id="@+id/txt_hs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_20"
            android:text="10.0M/S"
            android:textColor="@color/user_icon_default_white"/>

        <ImageView
            android:id="@+id/img_record_hs"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_magin_5"
            android:background="@mipmap/flight_record_unsort"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_camera"
        android:layout_width="wrap_content"
        android:layout_below="@id/linear_hud"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10%w"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_magin_5"
        android:paddingBottom="@dimen/activity_magin_5"
        android:gravity="center"
        android:padding="10dip"
        android:background="@drawable/oval"
        android:layout_height="45dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:text="ISO:"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:id="@+id/txt_iso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:id="@+id/txt_camera_file_shutterspeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:text="1/30"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:text="Ev:"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:id="@+id/txt_camera_file_ev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/user_icon_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:text="Wb:"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:id="@+id/txt_camera_file_wb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="auto"
            android:textColor="@color/user_icon_default_white"/>

        <TextView
            android:id="@+id/txt_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:text="1080P"
            android:singleLine="true"
            android:textColor="@color/user_icon_default_white"/>

        <ImageView
            android:layout_width="20dip"
            android:visibility="gone"
            android:layout_height="20dip"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:background="@mipmap/fpv_video_num"/>

        <TextView
            android:id="@+id/txt_camera_name"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:textColor="@color/user_icon_default_white"
            android:text="NAN"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linear_camera_file_ae"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_camera_file_ae"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/camera_controll_aelock_unlock"/>

            <TextView
                android:id="@+id/txt_camera_file_ae"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/activity_magin_10"
                android:layout_height="wrap_content"
                android:textColor="@color/user_icon_default_white"
                android:text="AE"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_obstacle"
        android:layout_marginTop="@dimen/activity_magin_5"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10%w"
        android:layout_below="@id/linear_camera"
        android:paddingTop="@dimen/activity_magin_5"
        android:paddingBottom="@dimen/activity_magin_5"
        android:gravity="center"
        android:padding="10dip"
        android:background="@drawable/oval"
        android:orientation="horizontal"
        android:layout_height="45dip">

        <TextView
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/user_icon_default_white"
            android:text="Left:"/>

        <TextView
            android:id="@+id/txt_obstacle_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/user_icon_default_white"
            android:text="0M"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:layout_height="wrap_content"
            android:textColor="@color/user_icon_default_white"
            android:text="Right:"/>

        <TextView
            android:id="@+id/txt_obstacle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/user_icon_default_white"
            android:text="0M"/>

        <TextView
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/user_icon_default_white"
            android:text="Front:"/>

        <TextView
            android:id="@+id/txt_obstacle_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/user_icon_default_white"
            android:text="0M"/>

        <TextView
            android:layout_marginLeft="@dimen/activity_magin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/user_icon_default_white"
            android:text="Back:"/>

        <TextView
            android:id="@+id/txt_obstacle_queen"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/activity_magin_10"
            android:layout_height="wrap_content"
            android:textColor="@color/user_icon_default_white"
            android:text="0M"/>
    </LinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>