<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="@color/mask_color"
    android:layout_width="400dip"
    android:layout_height="200dip">

    <TextView
        android:id="@+id/txt_name_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_magin_10"
        android:layout_centerHorizontal="true"
        android:textColor="@color/user_icon_default_white"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/txt_size_20"
        android:text="遥控器对频"/>

    <TextView
        android:id="@+id/txt_remote_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/user_icon_default_white"
        android:layout_marginTop="@dimen/activity_magin_15"
        android:textSize="@dimen/txt_size_18"
        android:text="@string/remote_dialog"/>

    <Button
        android:id="@+id/txt_id_remote"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center"
        android:textSize="@dimen/txt_size_18"
        android:textColor="@color/user_icon_default_white"
        android:background="@color/green"
        android:text="取消"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>